---
const route = [
  {
    name: "Dashboard",
    url: "#",
    icon: "bx bx-home-circle",
    subMenu: [
      { name: "Analytic Dashboard", url: "/" },
      { name: "Measurement Dashboard", url: "/measurement/" },
    ],
  },
  {
    name: "Log Report",
    url: "/logs/",
    icon: "bx bx-detail",
  },
  {
    name: "Plant / Factory",
    url: "/plant/",
    icon: "bx bx-map",
  },
  {
    name: "Vendor",
    url: "#",
    icon: "bx bx-layout",
    subMenu: [
      { name: "Vendor", url: "/vendor/" },
      { name: "Vehicle Assignment", url: "/vendor/assignment/" },
    ],
  },
  {
    name: "Vehicle",
    url: "#",
    icon: "bx bx-taxi",
    subMenu: [
      { name: "Vehicle", url: "/vehicle/" },
      { name: "Brand", url: "/vehicle/brand/" },
      { name: "Vehicle Type", url: "/vehicle/type/" },
    ],
  },
  {
    name: "Setting",
    url: "/",
    icon: "bx bx-cog",
    subMenu: [
      { name: "User Access", url: "/users/" },
      { name: "Role Access", url: "/role/" },
    ],
  },
];
---

<div class="vertical-menu">
  <div data-simplebar class="h-100">
    <div id="sidebar-menu">
      <ul class="metismenu list-unstyled" id="side-menu">
        <li class="menu-title" key="t-menu">Menu</li>
        {
          route.map((item) => (
            <li>
              {item.subMenu ? (
                <a href="javascript:void(0);" class="has-arrow waves-effect">
                  <i class={item.icon} />
                  <span key="t-dashboards">{item.name}</span>
                </a>
              ) : (
                <a href={item.url}>
                  <i class={item.icon} />
                  <span key="t-maps">{item.name}</span>
                </a>
              )}
              {item.subMenu && (
                <ul class="sub-menu" aria-expanded="false">
                  {item.subMenu.map((subItem) => (
                    <li>
                      <a href={subItem.url} key="t-default">
                        {subItem.name}
                      </a>
                    </li>
                  ))}
                </ul>
              )}
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</div>

<script is:inline src="/js/app.js"></script>
